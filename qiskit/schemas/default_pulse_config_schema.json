{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://www.qiskit.org/schemas/default_pulse_config_schema.json",
    "description": "Default OpenPulse backend configuration",
    "definitions": {
        "complex": {
            "description": "JSON representation of a complex number",
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number"
            }
        },
        "complex_array": {
            "description": "JSON representation of a complex vector",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/complex"
            }
        },
        "complex_matrix": {
            "description": "JSON representaiton of a complex matrix",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/complex_array"
            }
        }
    },
    "type": "object",
    "required": ["qubit_freq","meas_freq","pulse_library","meas_kernel","discriminator"],
    "properties": {
        "qubit_freq": {
            "type": "array",
            "description": "Backend calibrated qubit frequencies",
            "minItems": 1,
            "items": {"type": "number"}},
        "meas_freq": {
            "type": "array",
            "description": "Backend calibrated qubit frequencies",
            "minItems": 1,
            "items": {"type": "number"}},
        "gate_def": {
            "type": "array",
            "description": "Backend calibrated QASM to Pulse definitions",
            "items": {"$ref": "file:gate_def_schema.json"}
        },
        "pulse_library": {
            "type": "array",
            "description": "Backend pulse library",
            "items": {
                "type": "object",
                "required": ["name","samples"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Pulse name"},
                    "samples": {"$ref": "#/definitions/complex_array"}
                    }
                }
        },
        "meas_kernel": {
            "type": "object",
            "description": "Default measurement kernel",
            "properties": {
                "name": {"type": "string"},
                "params": {"type": "array"}
                }
            },
        "discriminator": {
            "type": "object",
            "description": "Default measurement kernel",
            "properties": {
                "name": {"type": "string"},
                "params": {"type": "array"}
                }
            }
        
   }
}

